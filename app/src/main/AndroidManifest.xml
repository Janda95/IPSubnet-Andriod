<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jlrutilities.subnetapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.jlrutilities.subnetapp.activities.DescriptionActivity"
            android:label="@string/title_activity_description">
        </activity>
        <activity android:name="com.jlrutilities.subnetapp.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.jlrutilities.subnetapp.activities.CheatsheetActivity"
            android:label="Hosts Lookup"/>
        <activity android:name="com.jlrutilities.subnetapp.activities.SplitterActivity"
            android:label="Subnet Splitter"/>
    </application>

</manifest>