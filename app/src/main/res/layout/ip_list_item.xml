<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="4dp">

    <ImageView
        android:id="@+id/imageListIcon"
        android:contentDescription="IpItem"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/baseline_format_list_bulleted_black_18"/>

    <TextView
        android:id="@+id/tvIpItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="4dp"
        android:layout_toEndOf="@+id/imageListIcon"
        android:layout_toRightOf="@+id/imageListIcon"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="18sp" />

</RelativeLayout>